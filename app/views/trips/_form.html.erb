
<div class="container">
<%= form_with model: trip do |form| %>
  <div class="row">
    <%= form.label :name,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
    <%= form.text_field :name %>
    <% trip.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>

  <div class="row">
    <%= form.label :contact_no ,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg"%>
    <div class="col-sm-10">
    <%= form.text_area :contact_no %><br>
    <% trip.errors.full_messages_for(:contact_no).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>
  <div class="row">
    <%= form.label :email_id ,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg"%>
    <div class="col-sm-10">
    <%= form.text_area :email_id %><br>
    <% trip.errors.full_messages_for(:email_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
    </div>
  </div><br>
  <div class="row">
    <%= form.label :no_of_people,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg"%>
    <div class="col-sm-10">
    <%= form.text_area :no_of_people %><br>
    <% trip.errors.full_messages_for(:no_of_people).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>
  <div class="row">
    <%= form.label :name_of_place,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
    <%= form.text_area :name_of_place %><br>
    <% trip.errors.full_messages_for(:name_of_place).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>
  <div class="row">
    <%= form.label :date_for_tour,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
    <%= form.date_field :date_for_tour %><br>
    <% trip.errors.full_messages_for(:date_for_tour).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>
  <div class="row">
    <%= form.label :return_date,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg"%>
    <div class="col-sm-10">
    <%= form.datetime_field :return_date %><br>
    <% trip.errors.full_messages_for(:return_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>

  <div class="row">
    <%= form.label :image ,style: "display: block",for:"colFormLabelLg", class:"col-sm-2 col-form-label col-form-label-lg"%><br>
    <div class="col-sm-10">
    <%= form.file_field :image %><br>
    </div>
  </div>

  <div><br>
    <%= form.submit "Submit",class:"btn btn-info"%>
  </div>
<% end %>
</div>